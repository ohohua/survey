{
  "language": "ts",
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false,
    "flat": false
  },
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "dtoFileNameSuffix": [".vo.ts", ".dto.ts", ".entity.ts", ".model.ts"],
        "classValidatorShim": true,
        "introspectComments": true
      }
    }
  ],
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "tsConfigPath": "tsconfig.json"
  }
}
